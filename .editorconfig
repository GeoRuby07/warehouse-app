# top-most EditorConfig file
root = true

[*.cs]
charset = utf-8

indent_style = space
indent_size = 4

max_line_length = 120

dotnet_style_namespace_match_folder = true:suggestion

dotnet_sort_system_directives_first = true

dotnet_separate_import_directive_groups = true

dotnet_naming_rule.public_members_should_be_pascal.case_style = pascal_case
dotnet_naming_rule.public_members_should_be_pascal.symbols  = public_symbols
dotnet_naming_rule.public_members_should_be_pascal.severity = suggestion

dotnet_naming_symbols.public_symbols.applicable_kinds = property,method,field,event
dotnet_naming_symbols.public_symbols.accessibility = public


dotnet_style_var_when_type_is_apparent = true:suggestion
dotnet_style_var_elsewhere = false:suggestion

csharp_new_line_before_open_brace = all
csharp_new_line_between_query_expression_clauses = true